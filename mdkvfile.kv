NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerIconButton:
            icon: 'record'
            text: 'Record a Vox'
            on_release: root.ids.scr_mngr.current = 'record'
        NavigationDrawerToolbar:
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Vox'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: root.toggle_nav_drawer()]]
            # right_action_items: [['dots-vertical', lambda x: root.toggle_nav_drawer()]]
        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'main'
                BoxLayout:
                    orientation: 'horizontal'
                    MDLabel:
                        text: 'Welcome to Vox\nTo begin, press the hamburger menu and click Record a vox\n'
                        halign: 'center'
                        valign: 'center'
            Screen:
                name: 'record'
                BoxLayout:
                    orientation: 'vertical'
                    MDIconButton:
                        icon: 'record'
                        size: 5 * dp(48), dp(48)
                        pos_hint: {'center_x': 0.5}
                        halign: 'center'
                        valign: 'center'
                        on_press: app.record()
